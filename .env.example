# ========================================
# 前端服务器配置
# ========================================

# 前端服务器端口
PORT=3000

# ========================================
# 服务器配置（浏览器访问）
# ========================================

# 服务器主机名（浏览器会自动使用当前访问的主机名）
NEXT_PUBLIC_SERVER_HOST=127.0.0.1

# API 服务器端口
NEXT_PUBLIC_SERVER_API_PORT=3001

# PeerJS 信令服务器端口
NEXT_PUBLIC_SERVER_SIGNALING_PORT=9000

# PeerJS 路径
NEXT_PUBLIC_SERVER_SIGNALING_PEER_PATH=/myapp

# ========================================
# SSL 证书配置 (HTTPS)
# ========================================

# SSL 证书路径（相对于项目根目录）
SSL_CERT_PATH=../certs/cert.pem
SSL_KEY_PATH=../certs/key.pem
